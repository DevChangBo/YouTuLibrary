<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mralbert.youtulibrary.MainActivity">

    <Button
        android:id="@+id/bt_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="身份证识别" />

    <Button
        android:id="@+id/bt_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_button3"
        android:layout_alignLeft="@+id/bt_button1"
        android:layout_alignStart="@+id/bt_button1"
        android:layout_marginBottom="29dp"
        android:text="驾驶证识别" />

    <Button
        android:id="@+id/bt_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_button4"
        android:layout_alignLeft="@+id/bt_button4"
        android:layout_alignStart="@+id/bt_button4"
        android:layout_marginBottom="34dp"
        android:text="行驶证识别" />

    <Button
        android:id="@+id/bt_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_button1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt_button1"
        android:layout_marginBottom="111dp"
        android:text="车牌号识别" />

</RelativeLayout>
